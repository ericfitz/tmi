                  "                pm.sendRequest(authReq, (err, res) => {",
                  "                    if (err) console.log('Auth request error:', err);",
                  "                    resolve();",
                  "                });",
                  "            });",
                  "            ",
                  "            // Wait for token capture",
                  "            await new Promise(r => setTimeout(r, 2000));",
                  "            ",
