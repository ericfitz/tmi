      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Generate bulk metadata",
              "const factory = new TMITestDataFactory();",
              "const bulkMetadata = factory.bulkMetadata(3);",
              "",
              "pm.collectionVariables.set('bulkMetadataData', JSON.stringify(bulkMetadata));"
            ]
