          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has invocation details', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const invocationId = pm.collectionVariables.get('invocationId');",
                  "    pm.expect(jsonData.id).to.equal(invocationId);",
                  "});",
                  "",
                  "pm.test('Invocation has complete information', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('addon_id');",
                  "    pm.expect(jsonData).to.have.property('status');",
                  "    pm.expect(jsonData).to.have.property('created_at');",
                  "    pm.expect(jsonData).to.have.property('parameters');",
                  "});",
                  "",
                  "pm.test('Status is valid', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const validStatuses = ['pending', 'running', 'completed', 'failed', 'cancelled'];",
                  "    pm.expect(validStatuses).to.include(jsonData.status);",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(500);",
                  "});"
                ]
              }
            }
          ]
        },
