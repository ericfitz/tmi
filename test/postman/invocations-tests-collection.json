{
  "info": {
    "name": "TMI Invocations Tests",
    "description": "Complete Invocations endpoint testing for addon invocation tracking",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8080"
    },
    {
      "key": "oauthStubUrl",
      "value": "http://127.0.0.1:8079"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "invocationId",
      "value": ""
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Use pre-authenticated token from environment",
          "const aliceToken = pm.environment.get('token_alice');",
          "if (aliceToken) {",
          "    pm.collectionVariables.set('accessToken', aliceToken);",
          "    console.log('Using pre-authenticated token for alice');",
          "} else {",
          "    console.error('No pre-authenticated token found for alice');",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Invocation Retrieval",
      "item": [
        {
          "name": "List Invocations - Success (200)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/invocations",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "invocations"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is array of invocations', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('invocations');\n    pm.expect(jsonData.invocations).to.be.an('array')",
                  "});",
                  "",
                  "pm.test('Invocations have required fields', function () {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.invocations.length > 0) {",
                  "        pm.expect(jsonData.invocations[0]).to.have.property('id');",
                  "        pm.expect(jsonData.invocations[0]).to.have.property('addon_id');",
                  "        pm.expect(jsonData.invocations[0]).to.have.property('status');",
                  "        pm.expect(jsonData.invocations[0]).to.have.property('created_at');",
                  "        // Store first invocation ID for subsequent tests",
                  "        pm.collectionVariables.set('invocationId', jsonData.invocations[0].id);",
                  "    }",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(500);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "List Invocations - No Auth (401)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
