              "mode": "raw",
              "raw": "{\n  \"status\": \"completed\",\n  \"result\": {\n    \"success\": true,\n    \"findings_count\": 5,\n    \"recommendations\": [\"Update dependencies\", \"Review access controls\"]\n  },\n  \"message\": \"Analysis completed successfully\"\n}"
