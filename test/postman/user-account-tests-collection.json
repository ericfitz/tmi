        {
          "name": "List Client Credentials - Success (200)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/me/client_credentials",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "me",
                "client_credentials"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is array of credentials', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('credentials');\n    pm.expect(jsonData.credentials).to.be.an('array')",
                  "});",
                  "",
                  "pm.test('Credentials do not include secret', function () {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.credentials.length > 0) {",
                  "        pm.expect(jsonData.credentials[0]).to.not.have.property('client_secret');",
                  "    }",
                  "});",
                  "",
                  "pm.test('Contains created credential', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const credentialId = pm.collectionVariables.get('clientCredentialId');",
                  "    const found = jsonData.credentials.find(cred => cred.id === credentialId);",
                  "    pm.expect(found).to.exist;",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(500);",
                  "});"
                ]
              }
            }
          ]
        },
