    {
      "name": "Client Credentials",
      "item": [
        {
          "name": "Create Client Credential - Success (201)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Client Credential {{$randomInt}}\",\n  \"description\": \"Client credential for API testing\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/me/client_credentials",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "me",
                "client_credentials"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has client credential data', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.id).to.exist;",
                  "    pm.expect(jsonData.client_id).to.exist;",
                  "    pm.expect(jsonData.client_secret).to.exist;",
                  "    pm.expect(jsonData.name).to.exist;",
                  "    ",
                  "    // Store for subsequent tests",
                  "    pm.collectionVariables.set('clientCredentialId', jsonData.id);",
                  "    pm.collectionVariables.set('clientId', jsonData.client_id);",
                  "    pm.collectionVariables.set('clientSecret', jsonData.client_secret);",
                  "});",
                  "",
                  "pm.test('Client ID has correct format', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.client_id).to.match(/^tmi_cc_/);",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(1000);",
                  "});"
                ]
              }
            }
          ]
        },
