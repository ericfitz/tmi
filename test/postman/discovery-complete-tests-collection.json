    {
      "name": "Error Scenarios",
      "item": [
        {
          "name": "Invalid Well-Known Path (404)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/.well-known/nonexistent",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                ".well-known",
                "nonexistent"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 404 (or 429 rate limited)', function () {",
                  "    if (pm.response.code === 429) {",
                  "        console.log('Rate limited - this is acceptable in test environments');",
                  "        pm.expect([404, 429]).to.include(pm.response.code);",
                  "    } else {",
                  "        pm.response.to.have.status(404);",
                  "    }",
                  "});",
                  "",
                  "if (pm.response.code === 404) {",
                  "    pm.test('Error indicates not found', function () {",
                  "        const responseText = pm.response.text();",
                  "        pm.expect(responseText.toLowerCase()).to.include('not');",
                  "    });",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Malformed Discovery Request (400/405)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"invalid\": \"request\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/.well-known/openid-configuration",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                ".well-known",
                "openid-configuration"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code indicates error (400, 404, 405, or 429 rate limited)', function () {",
                  "    // 400 = bad request, 404 = not found (POST not supported), 405 = method not allowed, 429 = rate limited",
                  "    pm.expect([400, 404, 405, 429]).to.include(pm.response.code);",
                  "});",
                  "",
                  "if (pm.response.code !== 429) {",
                  "    pm.test('Error response received', function () {",
                  "        const jsonData = pm.response.json();",
                  "        pm.expect(jsonData.error || jsonData.message || jsonData.error_description).to.exist;",
                  "    });",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    }
