        {
          "name": "Create Addon - Success (201)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Addon {{$randomInt}}\",\n  \"description\": \"A test addon for API testing\",\n  \"type\": \"analysis\",\n  \"endpoint_url\": \"https://addon.example.com/analyze\",\n  \"auth_type\": \"bearer\",\n  \"enabled\": true,\n  \"configuration\": {\n    \"timeout_seconds\": 30,\n    \"retry_count\": 3\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/addons",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "addons"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has addon data', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.id).to.exist;",
                  "    pm.expect(jsonData.name).to.exist;",
                  "    pm.expect(jsonData.type).to.exist;",
                  "    pm.expect(jsonData.endpoint_url).to.exist;",
                  "    pm.collectionVariables.set('addonId', jsonData.id);",
                  "});",
                  "",
                  "pm.test('Addon has valid UUID', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const uuidRegex = /^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$/i;",
                  "    pm.expect(jsonData.id).to.match(uuidRegex);",
                  "});",
                  "",
                  "pm.test('Addon type is valid', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.type).to.equal('analysis');",
                  "});",
                  "",
                  "pm.test('Configuration is stored', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.configuration).to.exist;",
                  "    pm.expect(jsonData.configuration.timeout_seconds).to.equal(30);",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(1000);",
                  "});"
                ]
              }
            }
          ]
        },
