                  "    pm.expect(found).to.exist;",
                  "});",
                  "",
                  "pm.test('Addons have required fields', function () {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.addons.length > 0) {",
                  "        pm.expect(jsonData.addons[0]).to.have.property('id');",
                  "        pm.expect(jsonData.addons[0]).to.have.property('name');",
                  "        pm.expect(jsonData.addons[0]).to.have.property('type');",
                  "        pm.expect(jsonData.addons[0]).to.have.property('endpoint_url');",
                  "    }",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
