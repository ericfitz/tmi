{
  "info": {
    "name": "TMI OAuth Complete Flow Tests",
    "description": "OAuth 2.0 endpoint testing with comprehensive status code coverage. Uses pre-authenticated tokens from test runner.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8080"
    },
    {
      "key": "oauthStubUrl",
      "value": "http://127.0.0.1:8079"
    },
    {
      "key": "testUser",
      "value": "oauth-test-user"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "refreshToken",
      "value": ""
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Use pre-authenticated token from environment (set by test runner)",
          "const aliceToken = pm.environment.get('token_alice');",
          "if (aliceToken) {",
          "    pm.collectionVariables.set('accessToken', aliceToken);",
          "    console.log('Using pre-authenticated token for alice');",
          "} else {",
          "    console.warn('No pre-authenticated token found - some tests may fail');",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "OAuth Providers",
      "item": [
        {
          "name": "Get OAuth Providers - Success",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/oauth2/providers",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth2",
                "providers"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has providers array', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('providers');",
                  "    pm.expect(jsonData.providers).to.be.an('array');",
                  "    pm.expect(jsonData.providers.length).to.be.greaterThan(0);",
                  "});",
                  "",
                  "pm.test('TMI provider exists', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const tmiProvider = jsonData.providers.find(p => p.id === 'tmi');",
                  "    pm.expect(tmiProvider).to.exist;",
                  "    pm.expect(tmiProvider.name).to.exist;",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(500);",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "OAuth Authorization Validation",
      "item": [
        {
          "name": "OAuth Authorize - Missing code_challenge (400)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/oauth2/authorize?idp=tmi&scope=openid&client_callback={{oauthStubUrl}}/",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth2",
                "authorize"
              ],
              "query": [
                {
                  "key": "idp",
                  "value": "tmi"
                },
                {
                  "key": "scope",
                  "value": "openid"
                },
                {
                  "key": "client_callback",
                  "value": "{{oauthStubUrl}}/"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 400', function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test('Error response received', function () {",
                  "    const responseText = pm.response.text();",
                  "    pm.expect(responseText.toLowerCase()).to.include('code_challenge');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "OAuth Authorize - Invalid IDP (400)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/oauth2/authorize?idp=nonexistent&scope=openid&code_challenge=test123&code_challenge_method=S256&client_callback={{oauthStubUrl}}/",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth2",
                "authorize"
              ],
              "query": [
                {
                  "key": "idp",
                  "value": "nonexistent"
                },
                {
                  "key": "scope",
                  "value": "openid"
                },
                {
                  "key": "code_challenge",
                  "value": "test123"
                },
                {
                  "key": "code_challenge_method",
                  "value": "S256"
                },
                {
                  "key": "client_callback",
                  "value": "{{oauthStubUrl}}/"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 400', function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test('Error response received', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.error).to.exist;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "OAuth Token Operations",
      "item": [
        {
          "name": "Token Introspection - Valid Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "token",
                  "value": "{{accessToken}}"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/oauth2/introspect",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth2",
                "introspect"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Token is active', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.active).to.be.true;",
                  "});",
                  "",
                  "pm.test('Response has token details', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.sub).to.exist;",
                  "    pm.expect(jsonData.iss).to.exist;",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(500);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Token Introspection - Invalid Token (200 with active=false)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "token",
                  "value": "invalid.token.here"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/oauth2/introspect",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth2",
                "introspect"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Per RFC 7662, invalid tokens should return 200 with active=false",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Token is not active', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.active).to.be.false;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Token Introspection - Missing Token (400)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": []
            },
            "url": {
              "raw": "{{baseUrl}}/oauth2/introspect",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth2",
                "introspect"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 400', function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test('Error response received', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.error).to.exist;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "OAuth User Info",
      "item": [
        {
          "name": "Get User Info - Valid Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/oauth2/userinfo",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth2",
                "userinfo"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has user info', function () {",
                  "    const jsonData = pm.response.json();",
                  "    // OIDC-compliant userinfo response per OpenID Connect Core 1.0 Section 5.1",
                  "    pm.expect(jsonData.sub).to.exist;",
                  "    // Optional fields: email, name, idp, groups",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(500);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Get User Info - No Token (401)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/oauth2/userinfo",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth2",
                "userinfo"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 401', function () {",
                  "    pm.response.to.have.status(401);",
                  "});",
                  "",
                  "pm.test('Error response received', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.error).to.exist;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Get User Info - Invalid Token (401)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer invalid.token.here"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/oauth2/userinfo",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth2",
                "userinfo"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 401', function () {",
                  "    pm.response.to.have.status(401);",
                  "});",
                  "",
                  "pm.test('Error response received', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.error).to.exist;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "OAuth Token Revocation",
      "item": [
        {
          "name": "Revoke Token - No Token (400/401)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{baseUrl}}/oauth2/revoke",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth2",
                "revoke"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 400 or 401', function () {",
                  "    // Missing token can result in 400 (bad request) or 401 (unauthorized)",
                  "    pm.expect([400, 401]).to.include(pm.response.code);",
                  "});",
                  "",
                  "pm.test('Error response received', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.error).to.exist;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
