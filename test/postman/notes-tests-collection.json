          "name": "Create Note - Success (201)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Note {{$randomInt}}\",\n  \"content\": \"This is a comprehensive test note for API testing. It contains important observations about the threat model.\",\n  \"category\": \"observation\",\n  \"priority\": \"medium\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/threat_models/{{threatModelId}}/notes",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "threat_models",
                "{{threatModelId}}",
                "notes"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has note data', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.id).to.exist;",
                  "    pm.expect(jsonData.title).to.exist;",
                  "    pm.expect(jsonData.content).to.exist;",
                  "    pm.collectionVariables.set('noteId', jsonData.id);",
                  "});",
                  "",
                  "pm.test('Note has valid UUID', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const uuidRegex = /^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$/i;",
                  "    pm.expect(jsonData.id).to.match(uuidRegex);",
                  "});",
                  "",
                  "pm.test('Note has timestamps', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.created_at).to.exist;",
                  "});",
                  "",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(500);",
                  "});"
                ]
              }
            }
          ]
        },
